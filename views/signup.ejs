<%- include('partials/header.ejs') %>
    <script src="/js/signup.js"></script>
    
    <div class="ls-box">
        <h3> Sign-Up </h3>
        <form id="signup-form" method="POST" action="/">
            <span>Your name</span>
            <br />
            <input class="textbox" type="text" id="signup-name" placeholder="Desdinova Dharma"> 
            <br />
            <span class="text-danger" id="signup-name-error"></span>
            <br />
            <span>Your email</span>
            <br />
            <input class="textbox" type="text" id="signup-email" placeholder="desdinova@sirius.com">  
            <br />
            <span class="text-danger" id="signup-email-error"></span>
            <br />
            <span>Enter your password</span>
            <br>
            <input class="textbox" type="text" id="signup-pswd">  
            <br />
            <span class="text-danger" id="signup-pswd-error"></span>
            <br />
            <span>Re-enter your password</span>
            <br>
            <input class="textbox" type="text" id="signup-pswd">  
            <br />
            <span class="text-danger" id="signup-reenter-error"></span>
            <br />
            <div class="text-center">
            <input class="btn bg-warning text-dark" id="btn-create-account" type="submit" 
                value="Create Account">
            </div>
            <br />
        </form>
    </div>
    <br /><br />
<%- include('partials/footer.ejs') %>
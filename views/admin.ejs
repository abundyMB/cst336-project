<div class="container">
    <h2>Add new album to collection:</h2>
    <form id="add-form" action="/add-Album">
        <div class="form-group">
            <div class="col-xs-4">
               <span class="text-danger" id="title-artist-error"></span>
               <label for="title">Album Title:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-title" name="title" placeholder="Enter Album Title" required>
            </div>
            <div class="col-xs-3">
               <label for="artist">Artist:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-artist" name="artist" placeholder="Enter artist name">
            </div>
            <div class="col-xs-5">
               <label for="coverImage">Image file path:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-coverImage" name="coverImage" placeholder="Enter cover art image">
            </div>
            <div class="col-xs-2">
               <label for="price">Price:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control col-xs-2" id="add-price" name="price" placeholder="Enter price">
            </div>
            <div class="col-xs-2">
               <label for="genre">Genre:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-genre" name="genre" placeholder="Enter music genre">
            </div>
            <div class="col-xs-2">
               <label for="tag1">Tag 1:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-tag1" name="tag1" placeholder="Enter tag 1">
            </div>
            <div class="col-xs-2">
               <label for="tag2">Tag 2:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-tag2" name="tag2" placeholder="Enter tag 2">
            </div>
            <button type="submit" class="btn btn-primary btn-success">Submit</button>
        </div>
    </form>
</div>
<hr />
<div>
    <h2> Update an album </h2>
    <div>
        <input type="text" id="updateSearch" placeholder="Album name or artist">  <br />
        <span id="updateResult"></span>
    </div>
</div>

<div class="container">
    <h4>Update information for selected album:</h4>
    <form id="update-form" action="/api/updateAlbumsArray">
        <div class="form-group">
            <div class="col-xs-4">
                <label for="title">Album Title:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-title" name="title" placeholder="Enter Album Title">
            </div>
            <div class="col-xs-3">
                <label for="artist">Artist:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-artist" name="artist" placeholder="Enter artist name">
            </div>
            <div class="col-xs-5">
                <label for="coverImage">Image file path:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="coverImage" name="update-coverImage" placeholder="Enter cover art image">
            </div>
            <div class="col-xs-2">
                <label for="price">Price:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control col-xs-2" id="update-price" name="price" placeholder="Enter price">
            </div>
            <div class="col-xs-2">
                <label for="genre">Genre:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-genre" name="genre" placeholder="Enter music genre">
            </div>
            <div class="col-xs-2">
               <label for="tag1">Tag 1:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="update-tag1" name="tag1" placeholder="Enter tag 1">
            </div>
            <div class="col-xs-2">
               <label for="tag2">Tag 2:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="update-tag2" name="tag2" placeholder="Enter tag 2">
            </div>
            <button type="submit" class="btn btn-primary btn-success">Submit</button>
        </div>
    </form>
</div>
<hr />
<div class="container">
    <h2>Delete an album:</h2>
    <form action="">
        <div class="form-group col-xs-2">
            <label for="albumIDNum">Album ID:</label>
            <h3 id="validationFdbk" class="bg-danger text-white"></h3>
            <input type="text" class="form-control" id="delete-album" name="delete-album" placeholder="Enter Album ID">
        </div>

        <button type="submit" class="btn btn-primary btn-danger">Submit</button>
    </form>
</div>
